#fowl_show.row
	.col-md-8.col-md-offset-2
		.panel.panel-default
			.panel-heading.fowl_image
				= image_tag @fowl.image.url
			.panel-heading.fowl_video
				= video_tag @fowl.video.url, controls: true, style: " margin-left: 15%; max-width: 70%;" if @fowl.video.present?
			.panel-body
				%h1= @fowl.title
				%p= @fowl.description
			.panel-body
				.row
					.col-md-6
						%p.user
						Submitted By
						- if @fowl.user
							= link_to @fowl.user.name, profile_path(@fowl.user.id) 

					.col-md-6
						.btn-group.pull-right
							- if user_signed_in?
								- if @fowl.user_id == current_user.id
									= link_to 'Edit', edit_fowl_path, class: "btn btn-default"
									= link_to 'Delete', fowl_path, method:  :delete, data: { confirm: "Are you sure?" }, class: "btn btn-default"
					= social_share_button_tag(@fowl.title, :url => fowl_url, :image => @fowl.image.url)
					.fb-like{"data-action" => "like", "data-href" => "https://developers.facebook.com/docs/plugins/", "data-layout" => "button", "data-share" => "false", "data-show-faces" => "true"}

			.panel-footer
				.row
					.col-md-6
						#comment
							%h2.comment_count= pluralize(@fowl.comments.count, "Comment")
							- @fowl.comments.each do |comment|
								.comment
									%p.username= comment.user.email
									%p.content= comment.content
							%br
							= render "comments/form"